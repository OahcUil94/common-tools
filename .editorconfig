root = true

[*]
end_of_line = lf # linux style
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
tab_width = 4

# Golang
[*.go]
indent_style = tab
tab_width = 4

# Frontend
[*.{js,ts,css,html}]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2